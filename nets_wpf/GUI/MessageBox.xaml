<Window x:Class="nets_wpf.GUI.PopUpMessageBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="ErrorMessage" SizeToContent="WidthAndHeight" WindowStyle="None" Background="Transparent" 
        MouseLeftButtonDown="Window_MouseLeftButtonDown" ResizeMode="NoResize">
<Window.Resources>
    <ResourceDictionary Source="ExpressionDark.xaml" />
</Window.Resources>
    <Grid Background="Transparent" Width="auto" Height="auto">
        <GroupBox  Height="230" Name="gb_MainContainer" FontSize="15" FontWeight="bold" Header="Delete Profile" Foreground="LightGray" BorderThickness="2">
            <Grid Height="200" Width="370">
                <TextBox Name="tbx_Message" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="LightGray" FontSize="12" 
                         FontWeight="normal" BorderThickness="0" Background="DimGray" Margin="-6,0,-6,72" IsEnabled="False"/>
                <Button Height="30" HorizontalAlignment="Left" Margin="44,0,0,24" Name="btn_OK" VerticalAlignment="Bottom" Width="70" FontWeight="bold" Click="btn_OK_Click">YES</Button>
                <Button Height="30" Name="btn_Cancel" VerticalAlignment="Bottom" FontWeight="bold" Click="btn_Cancel_Click" Margin="0,0,42,24" HorizontalAlignment="Right" Width="70">NO</Button>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
