<UserControl x:Class="nets_wpf.GUI.PageProfileList"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="auto" Width="auto"> 
    <Grid Background="Transparent">
        <GroupBox>
            <StackPanel Orientation="Vertical">
                <TextBox Height="80" Name="lb_AskUser" Width="400" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" TextWrapping="Wrap"
                         Foreground="LightGray"  FontWeight="normal" FontSize="13" IsEnabled="False"></TextBox>
                <ListBox Width="400" Height="250" Name="lbx_ProfileList" />
                <StackPanel Orientation="Horizontal" Width="120" Height="50" >
                    <Button Height="30" Width="50"  Name="btn_OK" Click="btn_OK_Click" >OK</Button>
                    <Button Height="30" Width="50" Margin="20,0,0,0" Name="btn_Abort" Click="btn_Abort_Click">Abort</Button>
                </StackPanel>               
            </StackPanel>
        </GroupBox>
    </Grid>
</UserControl>
